<h1>&nbsp;</h1>
<h3>员工列表</h3>

<div>
     <form method="get" action="<%= send("search_#{@model.pluralize}_path")%>">
          <div>
               <span>工号：
                    <input type="text" name="staff[staffNr]" />
               </span>
               <span>姓名：
                    <input type="text" name="staff[name]" />
               </span>
               <span>职称：
                    <input type="text" name="staff[title]" />
               </span>
               <input type="submit" value="查 找" class="btn btn-primary"/>
          </div>
     </form>
</div>
<table class="table table-bordered table-striped globle-table">
     <tr>
          <th>工号</th>
          <th>姓名</th>
          <th>邮件</th>
          <th>联系方式</th>
          <th>职称</th>
          <th>&nbsp;</th>
     </tr>
     <% @items.each do |item| %>
     <tr>
          <td><%= item.staffNr%></td>
          <td><%= item.name%></td>
          <td><%= item.email%></td>
          <td><%= item.contact%></td>
          <td><%= item.title%></td>
          <td><%= link_to '查看', item %>
          <%= link_to '编辑',send("edit_#{@model}_path",item) %>
          <%= link_to '删除', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
     <% end %>
</table>
<div class="footer-operate">
     <%= will_paginate @items%>
     <%= link_to "新建员工", send("new_#{@model}_path") %>
     <%= link_to "上传/更新员工", send("import_#{@model.pluralize}_path") %>
     <%= link_to "下载", send("download_#{@model.pluralize}_path") %>
</div>
