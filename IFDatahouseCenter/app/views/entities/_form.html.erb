<%= form_for(@item) do |f| %>
<% if @item.errors.any? %>
<div id="error_explanation">
     <h2><%= pluralize(@item.errors.count, "error") %> prohibited this part from being saved:</h2>
     <ul>
          <% @item.errors.full_messages.each do |msg| %>
          <li>
               <%= msg %>
          </li>
          <% end %>
     </ul>
</div>
<% end %>
<div class="field">
     <table>
          <tr>
               <td>组织号</td>
               <td><%= f.text_field :entityNr%></td>
          </tr>
          <tr>
               <td>名称</td>
               <td><%= f.text_field :name%></td>
          </tr>
          <tr>
               <td>联系人</td>
               <td><%= f.text_field :contactStaff%></td>
          </tr>
          <tr>
               <td>父级组织</td>
               <td><%= f.text_field :entity,{:value=> @item.entity.nil? ? nil :@item.entity.entityNr}%></td>
          </tr>
          <tr>
               <td>组织级别</td>
               <td><%= f.select :level,options_for_select(@levels,@item.level)%></td>
          </tr>
          <tr>
               <td>组织类型</td>
               <td><%= f.select :type,options_for_select(@types,@item.type)%></td>
          </tr>
     </table>
</div>
<div class="actions">
     <%= f.submit "提 交"%>
</div>
<% end %>
