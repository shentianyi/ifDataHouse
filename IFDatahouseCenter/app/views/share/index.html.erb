<h1>Listing <%= @model%></h1>

<table>
     <% @items.each do |item| %>
     <tr>
          <%item.instance_variable_get("@attributes").each do |k,v|%>
          <td><%= k+" :  "+v.to_s%></td>
          <%end%>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit',send("edit_#{@model}_path",item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
     <% end %>
</table>
<br />

<%= will_paginate @items%>
<%= link_to "Create/Update #{@model}", send("new_#{@model}_path") %>